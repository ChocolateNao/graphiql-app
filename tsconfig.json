{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noImplicitAny": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
      "components/*": ["./src/components/*"],
      "ui/*": ["./src/components/ui/*"],
      "pages/*": ["./src/pages/*"],
      "api/*": ["./src/api/*"],
      "assets/*": ["./src/assets/*"],
      "models/*": ["./src/models/*"],
      "shared/*": ["./src/shared/*"],
      "store/*": ["./src/store/*"],
      "hooks/*": ["./src/hooks/*"],
      "utils/*": ["./src/utils/*"],
      "layouts/*": ["./src/layouts/*"]
    }
  },
  "include": ["src", "tests", "tests/mock"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
